{
  "name": "floorfive-vs-code",
  "displayName": "FloorFive for VS Code",
  "description": "VS Code extension framework for simple commands execution and output visualization.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "author": {
    "name": "Alberto Denti"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "icon": "resources/logo/FloorFive_AppLogo.png",
  "contributes": {
    "commands": [
      {
        "command": "floorfive-vs-code.consoleClear",
        "title": "Clear All",
        "icon": "$(clear-all)",
        "category": "FloorFive"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "floorfive-vs-code",
          "title": "FloorFive",
          "icon": "resources/logo/FloorFive_activitybar.svg"
        }
      ],
      "panel": [
        {
          "id": "floorfive-vs-code-output",
          "title": "FloorFive",
          "icon": "resources/logo/FloorFive_activitybar.svg"
        }
      ]
    },
    "views": {
      "floorfive-vs-code": [
        {
          "id": "floorfive-vs-code.executionPanel",
          "name": "Execution Panel",
          "type": "webview"
        }
      ],
      "floorfive-vs-code-output": [
        {
          "id": "floorfive-vs-code-output.outputPanel",
          "name": "Output Panel",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "floorfive-vs-code.consoleClear",
          "when": "view == floorfive-vs-code-output.outputPanel",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
